#!/usr/bin/env node

var minimist = require('minimist');
var options = minimist(process.argv, {
  boolean: ['no-color', 'json'],
  default: {
    'no-color': false,
    json: false
  }
});
var salita = require("../");

salita(process.cwd(), options, function() {
  if (!options.json) {
    console.log("Completed upgrade.");
  }
});
